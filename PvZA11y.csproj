    <PackageReference Include="System.Text.Encoding.CodePages" Version="8.0.0" />
    <PackageReference Include="Vortice.XInput" Version="3.3.4" />
    <PackageReference Include="YamlDotNet" Version="13.7.1" />
  </ItemGroup>


